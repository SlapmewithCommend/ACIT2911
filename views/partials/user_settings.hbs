<h2>Settings</h2>

<div>
    <form name="settings" id="settings" action="/updateUser" method="POST">
        <div class="privacy-settings">
            <h4>Privacy</h4>
            <input type="checkbox" name="showEmail" id="showEmail" {{{setChecked userSettings.showEmail}}}
                value=1><label for="showEmail">Show email</label>
            <input type="checkbox" name="showName" id="showName" {{{setChecked userSettings.showName}}} value=1><label
                for="showName">Show name</label>
        </div>

        <div class="privacy-notification">
            <h4>Notifications</h4>
            <div>
                <input type="checkbox" name="enableNotifs" id="enableNotifs" {{{setChecked userSettings.enableNotifs}}}
                    value=1><label for="enableNotifs">Enable notifications</label>
            </div>
        </div>
        
        <button class="privacy-notification" type="submit" id="submit">Confirm Settings</button>
    </form>
</div>